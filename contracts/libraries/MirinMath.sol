    function stddev(uint256[] memory numbers) internal pure returns (uint256 sd) {
        uint256 sum = 0;
        for (uint256 i = 0; i < numbers.length; i++) {
            sum += numbers[i];
        }
        uint256 mean = sum / numbers.length; // Integral value; float not supported in Solidity
        sum = 0;
        for (uint256 i = 0; i < numbers.length; i++) {
